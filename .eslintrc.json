{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {
    "arrow-parens": "off",
    "linebreak-style":0, // Para eliminar el error de LF y CRLF
    "global-require": 0,
    "eslint linebreak-style": [0, "error", "windows"], 
    "comma-dangle":"off", 
    "spaced-comment": "off",
    "object-curly-newline": "off",
    "no-param-reassign":"off"
  }
}
